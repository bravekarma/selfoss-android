<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.Selfoss" parent="@android:style/Theme.Material.Light.DarkActionBar">
		<item name="android:actionBarItemBackground">@drawable/clickable_background_selfoss</item>
		<item name="android:popupMenuStyle">@style/PopupMenu.Selfoss</item>
		<item name="android:dropDownListViewStyle">@style/DropDownListView.Selfoss</item>
		<item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Selfoss</item>
		<item name="android:actionDropDownStyle">@style/DropDownNav.Selfoss</item>
		<item name="android:actionBarStyle">@style/ActionBar.Solid.Selfoss</item>
		<item name="android:actionModeBackground">@drawable/cab_background_top_selfoss</item>
		<item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_selfoss</item>
		<item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Selfoss</item>
		<item name="android:actionBarWidgetTheme">@style/Theme.Selfoss.Widget</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>

		<item name="android:editTextStyle">@style/EditTextSelfoss</item>
		<item name="android:checkboxStyle">@style/CheckBoxSelfoss</item>
		<item name="android:radioButtonStyle">@style/RadioButtonSelfoss</item>
		<item name="android:spinnerStyle">@style/SpinnerSelfoss</item>
		<item name="android:dropDownSpinnerStyle">@style/SpinnerSelfoss.DropDown</item>
		<item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemSelfoss</item>
		<item name="android:listViewStyle">@style/ListViewSelfoss</item>
		<item name="android:listViewWhiteStyle">@style/ListViewSelfoss.White</item>
		<item name="android:spinnerItemStyle">@style/SpinnerItemSelfoss</item>
		<item name="android:editTextBackground">@drawable/edit_text_holo_light</item>
		<item name="android:listChoiceIndicatorMultiple">@drawable/btn_check_holo_light</item>
		<item name="android:listChoiceIndicatorSingle">@drawable/btn_radio_holo_light</item>
		<item name="android:buttonStyle">@style/ButtonSelfoss</item>
		<item name="android:imageButtonStyle">@style/ImageButtonSelfoss</item>
		<item name="android:listChoiceBackgroundIndicator">@drawable/list_selector_holo_light</item>
		<item name="android:activatedBackgroundIndicator">@drawable/activated_background_holo_light</item>

		<item name="android:windowBackground">@drawable/background</item>

	</style>

	<style name="ActionBar.Solid.Selfoss" parent="@android:style/Widget.Material.Light.ActionBar.Solid">
		<item name="android:background">@drawable/ab_solid_selfoss</item>
		<item name="android:backgroundStacked">@drawable/ab_stacked_solid_selfoss</item>
		<item name="android:backgroundSplit">@drawable/ab_bottom_solid_selfoss</item>
		<item name="android:progressBarStyle">@style/ProgressBar.Selfoss</item>
        <item name="ptrHeaderStyle">@style/Widget.Custom.PtrHeader</item>
	</style>

	<style name="PopupMenu.Selfoss" parent="@android:style/Widget.Material.ListPopupWindow">
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_selfoss</item>
	</style>

	<style name="DropDownListView.Selfoss" parent="@android:style/Widget.Material.ListView.DropDown">
		<item name="android:listSelector">@drawable/clickable_background_selfoss</item>
	</style>

	<style name="ActionBarTabStyle.Selfoss" parent="@android:style/Widget.Material.ActionBar.TabView">
		<item name="android:background">@drawable/tab_indicator_ab_selfoss</item>
	</style>

	<style name="DropDownNav.Selfoss" parent="@android:style/Widget.Material.Spinner">
		<item name="android:background">@drawable/spinner_background_ab_selfoss</item>
		<item name="android:popupBackground">@drawable/menu_dropdown_panel_selfoss</item>
		<item name="android:dropDownSelector">@drawable/clickable_background_selfoss</item>
	</style>

	<style name="ProgressBar.Selfoss" parent="@android:style/Widget.Material.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/progress_horizontal_selfoss</item>
	</style>

	<style name="ActionButton.CloseMode.Selfoss" parent="@android:style/Widget.Material.ActionButton.CloseMode">
		<item name="android:background">@drawable/btn_cab_done_selfoss</item>
	</style>

	<style name="Theme.Selfoss.Widget" parent="@android:style/Theme.Material">
		<item name="android:popupMenuStyle">@style/PopupMenu.Selfoss</item>
		<item name="android:dropDownListViewStyle">@style/DropDownListView.Selfoss</item>
	</style>

	<style name="EditTextSelfoss" parent="android:Widget.Material.EditText">
		<item name="android:background">@drawable/edit_text_holo_light</item>
		<item name="android:textColor">#000000</item>
	</style>

	<style name="CheckBoxSelfoss" parent="android:Widget.Material.CompoundButton.CheckBox">
		<item name="android:button">@drawable/btn_check_holo_light</item>
	</style>

	<style name="RadioButtonSelfoss" parent="android:Widget.Material.CompoundButton.RadioButton">
		<item name="android:button">@drawable/btn_radio_holo_light</item>
	</style>

	<style name="ButtonSelfoss" parent="android:Widget.Material.Light.Button">
		<item name="android:background">@drawable/btn_default_holo_light</item>
	</style>

	<style name="ImageButtonSelfoss" parent="android:Widget.Material.Light.ImageButton">
		<item name="android:background">@drawable/btn_default_holo_light</item>
	</style>

	<style name="SpinnerSelfoss" parent="android:Widget.Material.Light.Spinner">
		<item name="android:background">@drawable/spinner_background_holo_light</item>
		<item name="android:dropDownSelector">@drawable/list_selector_holo_light</item>
	</style>

	<style name="SpinnerSelfoss.DropDown">
		<item name="android:spinnerMode">dropdown</item>
	</style>

	<style name="SpinnerDropDownItemSelfoss" parent="android:Widget.Material.DropDownItem.Spinner">
		<item name="android:checkMark">@drawable/btn_radio_holo_light</item>
	</style>

	<style name="ListViewSelfoss" parent="android:Widget.Material.ListView">
		<item name="android:listSelector">@drawable/list_selector_holo_light</item>
	</style>

	<style name="ListViewSelfoss.White" parent="android:Widget.Material.Light.ListView">
		<item name="android:listSelector">@drawable/list_selector_holo_light</item>
	</style>

	<style name="SpinnerItemSelfoss" parent="android:TextAppearance.Material.Widget.TextView.SpinnerItem">
		<item name="android:textColor">#000000</item>
	</style>

</resources>